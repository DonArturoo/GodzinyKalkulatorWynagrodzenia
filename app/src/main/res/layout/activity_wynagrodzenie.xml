<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Wynagrodzenie">

    <TextView
        android:id="@+id/rachunek"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textSize="50sp"
        android:textStyle="italic"
        app:layout_constraintTop_toBottomOf="@+id/wynagbrutto"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/wynagbrutto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Twoja kwota brutto to"
        android:textSize="50sp"
        android:textStyle="italic"
        app:layout_constraintTop_toBottomOf="@+id/wynagnetto"
        tools:layout_editor_absoluteX="55dp"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/wynagnetto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Twoja kwota netto to"
        android:textSize="50sp"
        android:textStyle="italic"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="8dp"
        android:textColor="@android:color/black"/>

</android.support.constraint.ConstraintLayout>